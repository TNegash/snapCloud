<div class="thumbnail-container">
    <% if (collection.thumbnail == nil) then %>
    <div class="collection-thumbnail">
        <i class="no-image fas fa-question-circle" aria-hidden=true></i>
        <span class="sr-only">no thumbnail aet</span>
    </div>
    <% else %>
    <img class="collection-thumbnail" alt="collection thumbnail"
        <% if (collection.thumbnail) then %>
            src="<%= collection.thumbnail %>">
        <% end %>
    <% end %>
</div>
